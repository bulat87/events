<% @event.comments.each do |comment| %>
  <p>
    <h5>
      <%= comment.user.name %>
    </h5>
  <div class="row">
  	<div class="col-lg-6">
  	  <blockquote>
        <%= comment.body %>
      </blockquote>  
    </div>
  </div>   
      <% if user_signed_in? %>
        <% if can? :delete, Comment %>
          <%= link_to 'delete', event_comment_path(@event, comment), method: :delete, :class => "btn btn-primary btn-xs" %>
        <% end %>
      <% end %>  
  </p>
<% end %>