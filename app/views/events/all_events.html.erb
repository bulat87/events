<h1>Tables</h1>
<div class="container">
<% @events.each do |event| %>
  <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
    <th>#</th>
    <th>Event Title</th>
    <th>Date</th>
  </thead>
  <tbody>
    <tr>
    <td>1</td>
    <td><%= link_to event.title, event %></td>
    <td><%= event.date %></td>
  </tr>
<% end %> 
</div>